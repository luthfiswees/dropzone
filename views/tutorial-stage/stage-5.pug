doctype html
html
  head
    //- import interactjs and bootstrap
    link(rel='stylesheet', href='/stylesheets/bootstrap/css/bootstrap.css')
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")
    script(src="/javascripts/interact.min.js")

    //- import game script and css
    link(rel="stylesheet", href="/stylesheets/stage-5/drag.css")
    link(rel="stylesheet", href="/stylesheets/four-dropzone.css")
    link(rel="stylesheet", href="/stylesheets/modal.css")
    script(src="/javascripts/stage-5/record.js")
    script(src="/javascripts/drag.js")
    script(src="/javascripts/stage-5/dropzone.js")
    script(src="/javascripts/time.js")
    script(src="/javascripts/stage-5/instruction.js")
    script(src="/javascripts/tutorial-end.js")

  body
    include stage-navbar.pug
    
    div(id="ilm-modal-box-introduction-1", class="ilm-modal-show")
      div(class="modal-dialog")
        div(class="modal-content")
          div(class="modal-header")
            div(class="modal-title")
              h4 Tutorial
          div(class="modal-body")
            div(class="ilm-modal-content")
              h4 Now you're ready
              br
              p Click next to continue playing the game.
          div(class="modal-footer")
            button(id="close-modal-box-introduction-1", type="button", class="btn btn-primary") Next

    article
      div(id="box-1", class="box-draggable")
        p=text

      div(id="box-2", class="box-draggable")
        p=text
        
      div(id="box-3", class="box-draggable")
        p=text
      
      div(id="box-4", class="box-draggable")
        p=text

      div(id="box-dropzone", class="dropzone")
        div(class="dropzone-text")
          p(id="dropzone-title") Dropzone
          p(id="dropzone-instruction")
            b BLUE v GREEN v RED

      div(id="ilm-modal-box", class="ilm-modal")
        div(class="modal-dialog")
          div(class="modal-content")
            div(class="modal-header")
              div(class="modal-title")
                h4 Level Complete
            div(class="modal-body")
              div(class="ilm-modal-content")
                h3 Congratulations on completing the task!
            div(class="modal-footer")
              button(type="button", class="btn btn-primary")
                a(id="ilm-button-text-color", href="/api/record_game") Next Task

      div(id="ilm-modal-box-instruction", class="ilm-modal")
        div(class="modal-dialog")
          div(class="modal-content")
            div(class="modal-header")
              div(class="modal-title")
                h4 Instructions
            div(class="modal-body")
              div(class="ilm-modal-content")
                h4 The <b>OR</b> (âˆ¨) operator means that you need to satisfy at least one conditions.
                br
                p In this case, you should put the <b>blue</b> box, <b>green</b> box, or <b>red</b> box
                p inside the <b>Dropzone</b>.
            div(class="modal-footer")
              button(id="close-modal-box-insruction", type="button", class="btn btn-primary") Close Instruction

      include stage-lose-popup.pug
